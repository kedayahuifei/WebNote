<%- include header.ejs%>

<body class="login-layout light-login">
<div id="navbar" class="navbar navbar-default">
    <script type="text/javascript">
        try{ace.settings.check('navbar' , 'fixed')}catch(e){}
    </script>

    <div class="navbar-container" id="navbar-container">
        <!-- #section:basics/sidebar.mobile.toggle -->
        <button type="button" class="navbar-toggle menu-toggler pull-left" id="menu-toggler" data-target="#sidebar">
            <span class="sr-only">Toggle sidebar</span>

            <span class="icon-bar"></span>

            <span class="icon-bar"></span>

            <span class="icon-bar"></span>
        </button>
        <!-- /section:basics/sidebar.mobile.toggle -->
        <div class="navbar-header pull-left">
            <!-- #section:basics/navbar.layout.brand -->
            <a href="/" class="navbar-brand">
                <middle>
                    <i class="fa fa-folder-open"></i>
                    WebNote
                </middle>
            </a>
        </div>
    </div><!-- /.navbar-container -->
</div>
<div class="main-container">
    <div class="main-content">
        <div class="row">
            <div class="col-sm-10 col-sm-offset-1">
                <div class="login-container center">
                    <div id="login-box" class="login-box visible widget-box no-border">
                        <div class="widget-body">
                            <div class="widget-main">
                                <h4 class="header blue lighter bigger center">
                                    <i class="ace-icon fa fa-coffee green"></i>
                                    用户登录
                                </h4>

                                <div class="space-6"></div>
                                <form class="form-horizontal" id="sample-form" method="post">
                                    <div class="form-group">
                                        <div class="col-sm-12">
                                            <span class="block input-icon input-icon-right">
											    <input type="text" id="username" name="username" placeholder="用户名" class="width-100">
											    <i class="ace-icon fa fa-user"></i>
											</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-sm-12">
                                            <span class="block input-icon input-icon-right">
											    <input type="password" id="password" name="password" placeholder="密码" class="width-100">
											    <i class="ace-icon fa fa-user"></i>
											</span>
                                        </div>
                                    </div>
                                    <div>
                                        <% if(error == 100){ %>
                                        <label class="form-group" style =""></label>
                                        <% }else if(error == 101){ %>
                                        <label class="form-group" style ="">用户名不存在</label>
                                        <% }else if(error == 102){ %>
                                        <label class="form-group" style ="">密码错误</label>
                                        <% }else if(error){%>
                                        <label class="form-group" style ="">用户名或密码不正确</label>
                                        <% } %>
                                    </div>
                                    <div class="clearfix form-actions">
                                        <label class="inline pull-left">
                                            <input type="checkbox" name="freeLogin" class="ace">
                                            <span class="lbl"> 7天内免登陆</span>
                                        </label>
                                        <button type="button submit" id="login" class="width-35 pull-right btn btn-sm btn-primary">
                                            <i class="ace-icon fa fa-key"></i>
                                            <span class="bigger-110">登录</span>
                                        </button>
                                    </div>
                                </form>

                                <div class="toolbar clearfix">
                                    <div>
                                        <a href="#" class="forgot-password-link">
                                            忘记密码
                                        </a>
                                        <i class="ace-icon fa fa-undo bigger-120 "></i>
                                    </div>

                                    <div>
                                        <i class="ace-icon  fa fa-floppy-o bigger-120 "></i>
                                        <a  class="user-signup-link" href="/register" >注册</a>
                                    </div>
                                </div>
                            </div><!-- /.widget-body -->
                        </div><!-- /.login-box -->
                    </div>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.main-content -->
    </div><!-- /.main-container -->
    <script  type="text/javascript">

    </script>
</body>
</html>