<%- include header.ejs%>


<div class="text-center page-title">用户登录</div>
<div class="container">
    <div class="row">
        <div class="col-xs-4 col-xs-offset-4">
            <form method="post">
                <% if(error == 101){ %>
                <label class="form-group" style ="">用户名不存在</label>
                <% }else if(error == 102){ %>
                <label class="form-group" style ="">密码错误</label>
                <% }else if(error){%>
                <label class="form-group" style ="">用户名或密码不正确</label>
                <% } %>
                <div class="form-group">
                    <input type="text" class="form-control" name ="username" placeholder="用户名">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name ="password" placeholder="密码">
                </div>
                <div class="col-2">
                    <input type="checkbox" id="freeLogin"  name="freeLogin">
                    <label>7天内免登陆</label>
                </div>
                <button type="submit" class="btn btn-default center-block">登录</button>
            </form>
        </div>
    </div>
</div>
<%- include footer.ejs%>